#== 개발 환경 설정

#== 서버 설정
PORT=3000
NODE_ENV=development

#== 로컬 PostgreSQL 데이터베이스 설정
DB_TYPE=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=robert
DB_PASSWORD=123456
DB_DATABASE=sportcomm

#== JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

#== GraphQL 설정
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true

#== 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

